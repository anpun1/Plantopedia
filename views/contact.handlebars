<form method="POST" name=""Form">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleText">Enter Message</label>
    <textarea name="text" class="form-control rounded-0 textarea" id="exampleText"
      placeholder="Please share any questions or feedback!"></textarea>
  </div>
  <div>
    <input type="button" value="Send Email" onclick="sendMail()">
  </div>
</form>
<script src="https://smtpjs.com/v3/smtp.js"></script>